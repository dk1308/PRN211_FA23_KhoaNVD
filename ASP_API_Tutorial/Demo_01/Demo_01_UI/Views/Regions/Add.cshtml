@using Demo_01_UI.Models.DTOs
@model AddRegionViewModel;

<h1 class="mt-4">Add New Region</h1>
<form asp-action="Add" method="post" class="mt-3">
    <div class="mt-2">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" type="text" required/>
    </div>
    <div class="mt-2">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" required />
    </div>
    <div class="mt-2">
        <label asp-for="RegionImageURL" class="form-label">ImageURL</label>
        <input asp-for="RegionImageURL" class="form-control" type="text" />
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>