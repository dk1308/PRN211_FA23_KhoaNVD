@using Demo_01_UI.Models.DTOs
@model UpdateRegionViewModel;

<h1 class="mt-4">Update Region</h1>

<form method="post">
    <div class="mt-2">
        <label asp-for ="Id" class="form-label">ID</label>
        <input type="text" asp-for="Id" class="form-control" readonly/>
    </div>
    <div class="mt-2">
        <label asp-for="Code" class="form-label">Code</label>
        <input type="text" asp-for="Code" class="form-control"/>
    </div>
    <div class="mt-2">
        <label asp-for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>
    <div class="mt-2">
        <label asp-for="RegionImageURL" class="form-label">ImageURL</label>
        <input type="text" asp-for="RegionImageURL" class="form-control"/>
    </div>
    <div class="mt-2 d-inline-block">
        <button asp-controller="Regions" asp-action="Update" class="btn btn-primary">Update</button>
    </div>
    <div class="mt-2 ms-2 d-inline-block">
        <button asp-controller="Regions" asp-action="Delete" class="btn btn-danger">Delete</button>
    </div>
</form>
