@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>
    <form asp-action="Index" method="post" class="col-8 mt-3">
        <h3 class="row"  style="color:red">@ViewData["Message"]</h3>
        <div class="row">
            <label class="col-4" for="email">Username</label>
            <input class="col-8" type="text" name="email" />
        </div>

        <div class="row">
            <label class="col-4" for="password">Password</label>
            <input class="col-8 w-500" type="password" name="password" />
        </div>
        
        <div class="row">
            <div class="col-6"></div>
            <input class="col-6" type="submit" value="Submit" />
        </div>
    </form>
</body>
